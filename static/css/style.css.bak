/* ===== Tailwind-Aligned Design Tokens ===== */
:root {
    /* Tailwind Violet / Cyan palette */
    --primary: #8b5cf6;       /* violet-500 */
    --primary-h: #a78bfa;     /* violet-400 */
    --primary-d: #7c3aed;     /* violet-600 */
    --accent: #22d3ee;        /* cyan-400 */
    --accent-h: #67e8f9;      /* cyan-300 */

    /* Tailwind Slate dark mode surfaces */
    --bg: #020617;            /* slate-950 */
    --bg-card: #0f172a;       /* slate-900 */
    --bg-card2: #1e293b;      /* slate-800 */
    --bg-input: #0f172a;      /* slate-900 */

    /* Tailwind Slate text */
    --text: #f1f5f9;          /* slate-100 */
    --text2: #94a3b8;         /* slate-400 */
    --text3: #64748b;         /* slate-500 */

    /* Tailwind Slate border */
    --border: #1e293b;        /* slate-800 */
    --border-h: #334155;      /* slate-700 */

    /* Tailwind semantic colors */
    --success: #22c55e;       /* green-500 */
    --error: #ef4444;         /* red-500 */
    --warn: #f59e0b;          /* amber-500 */

    /* Tailwind shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.3), 0 2px 4px -2px rgb(0 0 0 / 0.3);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.4), 0 4px 6px -4px rgb(0 0 0 / 0.4);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.5), 0 8px 10px -6px rgb(0 0 0 / 0.5);

    /* Tailwind border-radius */
    --r: 16px;     /* rounded-2xl */
    --rs: 12px;    /* rounded-xl */
    --rx: 8px;     /* rounded-lg */

    /* Transition */
    --tr: all .2s cubic-bezier(.4,0,.2,1);
}

/* ===== Reset ===== */
*,*::before,*::after{margin:0;padding:0;box-sizing:border-box}
html{scroll-behavior:smooth}
body{font-family:'Inter','Battambang','Khmer',-apple-system,system-ui,sans-serif;background:var(--bg);color:var(--text);min-height:100vh;line-height:1.625;overflow-x:hidden;-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale;text-rendering:optimizeLegibility;font-size:14px;letter-spacing:-.01em;font-feature-settings:'cv02','cv03','cv04','cv11'}
a{color:var(--accent);text-decoration:none;transition:color .15s}a:hover{text-decoration:underline;color:var(--accent-h)}
input,select,button,textarea{font-family:'Inter','Battambang','Khmer',-apple-system,system-ui,sans-serif}
h1,h2,h3,h4,h5,h6,.logo-text h1,.section-title,.tab-btn,.primary-btn,.dl-btn .bl,.pstat-val,.acard-val,.prog-pct,.count-label,.fcard h4,.state-card h3{font-family:'Koulen','Battambang','Khmer',sans-serif;letter-spacing:.025em}

/* ===== BG Animation ===== */
.bg-animation{position:fixed;inset:0;pointer-events:none;z-index:0;overflow:hidden}
.bg-circle{position:absolute;border-radius:50%;filter:blur(100px);opacity:.08}
.c1{width:500px;height:500px;background:#8b5cf6;top:-200px;right:-100px;animation:f1 12s ease-in-out infinite}
.c2{width:400px;height:400px;background:#22d3ee;bottom:-150px;left:-100px;animation:f2 15s ease-in-out infinite}
.c3{width:300px;height:300px;background:linear-gradient(135deg,#f43f5e,#22d3ee);top:50%;left:50%;transform:translate(-50%,-50%);animation:f3 10s ease-in-out infinite}
@keyframes f1{0%,100%{transform:translate(0,0)}50%{transform:translate(-60px,60px)}}
@keyframes f2{0%,100%{transform:translate(0,0)}50%{transform:translate(60px,-60px)}}
@keyframes f3{0%,100%{transform:translate(-50%,-50%) scale(1)}50%{transform:translate(-50%,-50%) scale(1.15)}}

/* ===== Container ===== */
.container{max-width:56rem;margin:0 auto;padding:1.25rem 1rem 2.5rem;position:relative;z-index:1}

/* ===== Header ===== */
.header{text-align:center;margin-bottom:1.25rem;position:relative}
.logo{display:flex;align-items:center;justify-content:center;gap:0.75rem}
.logo-icon{width:3.25rem;height:3.25rem;background:linear-gradient(135deg,var(--primary),var(--accent));border-radius:var(--rs);display:flex;align-items:center;justify-content:center;font-size:1.5rem;color:#fff;box-shadow:0 4px 20px rgba(139,92,246,.35)}
.logo-text h1{font-size:1.375rem;font-weight:400;letter-spacing:.04em;background:linear-gradient(135deg,#fff 0%,#c4b5fd 50%,#22d3ee 100%);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;text-shadow:none}
.subtitle{font-size:0.8125rem;color:var(--text2);margin-top:0.25rem;letter-spacing:.01em;opacity:.85}
.header>.donate-btn{position:absolute;top:0.5rem;right:0}
.platform-icons{display:flex;gap:0.75rem;justify-content:center;margin-top:0.625rem;flex-wrap:wrap}
.pi{font-size:1.125rem;opacity:.65;transition:var(--tr)}.pi:hover{opacity:1;transform:scale(1.15)}

/* ===== Tabs ===== */
.tab-nav{display:flex;gap:0.25rem;background:var(--bg-card);border-radius:var(--r);padding:0.375rem;margin-bottom:1.25rem;border:1px solid var(--border)}
.tab-btn{flex:1;display:flex;align-items:center;justify-content:center;gap:0.5rem;padding:0.75rem 0.875rem;border:none;border-radius:var(--rs);background:transparent;color:var(--text2);font-size:0.875rem;font-weight:500;cursor:pointer;transition:var(--tr);letter-spacing:.02em}
.tab-btn:hover{color:var(--text);background:rgba(255,255,255,.04)}
.tab-btn.active{background:linear-gradient(135deg,var(--primary),var(--primary-d));color:#fff;box-shadow:0 4px 14px rgba(139,92,246,.3)}
.tab-btn i{font-size:0.875rem}
.tab-content{display:none;animation:fadeIn .25s ease}.tab-content.active{display:block}
@keyframes fadeIn{from{opacity:0;transform:translateY(4px)}to{opacity:1;transform:none}}

/* ===== Input ===== */
.input-section{margin-bottom:1rem}
.input-card{background:var(--bg-card);border-radius:var(--r);padding:1.25rem;border:1px solid var(--border);box-shadow:var(--shadow)}
.input-wrapper{display:flex;align-items:center;background:var(--bg-input);border-radius:var(--rs);padding:0.25rem 0.25rem 0.25rem 0.875rem;border:2px solid var(--border);transition:var(--tr);margin-bottom:0.75rem}
.input-wrapper:focus-within{border-color:var(--primary);box-shadow:0 0 0 3px rgba(139,92,246,.12)}
.input-icon{color:var(--text3);font-size:0.9375rem;margin-right:0.5rem;flex-shrink:0}
.input-wrapper input{flex:1;background:none;border:none;outline:none;color:var(--text);font-size:0.875rem;padding:0.625rem 0;letter-spacing:-.005em}
.input-wrapper input::placeholder{color:var(--text3);letter-spacing:.01em}
.icon-btn{background:rgba(255,255,255,.06);border:none;color:var(--text2);padding:0.5rem 0.6875rem;border-radius:var(--rx);cursor:pointer;transition:var(--tr);font-size:0.8125rem}
.icon-btn:hover{background:rgba(255,255,255,.1);color:#fff}

/* Detected Platform Badge */
.detected-platform{display:flex;align-items:center;gap:0.375rem;margin-bottom:0.75rem;font-size:0.75rem;font-weight:600;color:var(--accent);padding:0.375rem 0.75rem;background:rgba(34,211,238,.06);border-radius:var(--rx);border:1px solid rgba(34,211,238,.15)}

/* ===== Buttons ===== */
.primary-btn{width:100%;padding:0.875rem;background:linear-gradient(135deg,var(--primary),var(--primary-d));border:none;border-radius:var(--rs);color:#fff;font-size:0.9375rem;font-weight:500;cursor:pointer;transition:var(--tr);display:flex;align-items:center;justify-content:center;gap:0.5rem;letter-spacing:.03em;text-shadow:0 1px 2px rgba(0,0,0,.15)}
.primary-btn:hover{transform:translateY(-2px);box-shadow:0 8px 20px rgba(139,92,246,.35)}
.primary-btn:disabled{opacity:.5;cursor:not-allowed;transform:none;box-shadow:none}
.primary-btn.save{display:inline-flex;width:auto;padding:0.75rem 1.75rem;background:linear-gradient(135deg,var(--success),#16a34a);text-decoration:none}
.primary-btn.save:hover{box-shadow:0 6px 18px rgba(34,197,94,.35);text-decoration:none}
.primary-btn.grab{background:linear-gradient(135deg,#f43f5e,#e11d48)}
.primary-btn.grab:hover{box-shadow:0 8px 20px rgba(244,63,94,.35)}
.primary-btn.sm,.secondary-btn.sm{width:auto;padding:0.5rem 0.875rem;font-size:0.75rem}
.secondary-btn{display:inline-flex;align-items:center;gap:0.375rem;padding:0.625rem 1.25rem;background:rgba(255,255,255,.06);border:1px solid var(--border);border-radius:var(--rs);color:var(--text2);font-size:0.8125rem;font-weight:600;cursor:pointer;transition:var(--tr)}
.secondary-btn:hover{background:rgba(255,255,255,.1);color:#fff;border-color:var(--border-h)}

/* ===== Platform Selector ===== */
.platform-selector{margin-bottom:0.875rem}
.ps-label{font-size:0.75rem;color:var(--text3);margin-bottom:0.375rem;display:block;font-weight:500}
.ps-badges{display:flex;gap:0.375rem;flex-wrap:wrap}
.ps-badge{padding:0.375rem 0.75rem;border-radius:9999px;border:2px solid var(--border);background:transparent;color:var(--text2);font-size:0.8125rem;cursor:pointer;transition:var(--tr);display:flex;align-items:center;gap:0.3125rem;letter-spacing:.01em}
.ps-badge:hover{border-color:var(--pc,#666);color:#fff}
.ps-badge.active{background:var(--pc,#666);border-color:var(--pc,#666);color:#fff}

/* ===== Grab Options ===== */
.grab-options{display:flex;gap:0.625rem;margin-bottom:0.75rem;flex-wrap:wrap}
.opt{display:flex;align-items:center;gap:0.375rem;font-size:0.75rem;color:var(--text2)}
.opt-sel{background:var(--bg-input);border:1px solid var(--border);color:var(--text);padding:0.3125rem 0.5rem;border-radius:var(--rx);font-size:0.75rem;cursor:pointer}

/* ===== State Sections ===== */
.state-section{margin-bottom:1rem}
.state-card{background:var(--bg-card);border-radius:var(--r);padding:2rem;text-align:center;border:1px solid var(--border);box-shadow:var(--shadow)}
.state-card.error{border-color:rgba(239,68,68,.25)}
.state-card.success{border-color:rgba(34,197,94,.25)}
.state-card h3{font-size:1.125rem;margin-bottom:0.5rem;letter-spacing:.02em}
.state-icon{font-size:2.5rem;margin-bottom:0.625rem}
.state-card.error .state-icon{color:var(--error)}
.state-card.success .state-icon{color:var(--success)}
.state-text{color:var(--text2);font-size:0.8125rem;margin-bottom:0.875rem;line-height:1.7;letter-spacing:.005em}
.loading-count{color:var(--accent);font-size:1.125rem;font-weight:700;margin-top:0.375rem}

/* Spinner */
.spinner{position:relative;width:3.5rem;height:3.5rem;margin:0 auto 0.875rem}
.spinner-ring{position:absolute;width:100%;height:100%;border:3px solid var(--border);border-top-color:var(--primary);border-right-color:var(--accent);border-radius:50%;animation:spin 1s linear infinite}
@keyframes spin{to{transform:rotate(360deg)}}
.spinner-icon{position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);font-size:1.125rem;color:var(--primary)}

/* ===== Video Card (Single) ===== */
.video-section{margin-bottom:1rem}
.video-card{background:var(--bg-card);border-radius:var(--r);overflow:hidden;border:1px solid var(--border);box-shadow:var(--shadow-lg)}
.video-preview{position:relative;width:100%;padding-top:56.25%;background:#000;overflow:hidden}
.video-preview img{position:absolute;inset:0;width:100%;height:100%;object-fit:cover}
.video-overlay{position:absolute;inset:0;display:flex;align-items:center;justify-content:center;background:rgba(0,0,0,.2)}
.play-icon{width:3.25rem;height:3.25rem;background:rgba(255,255,255,.15);border-radius:50%;display:flex;align-items:center;justify-content:center;backdrop-filter:blur(8px)}
.play-icon i{font-size:1.25rem;color:#fff;margin-left:3px}
.dur-badge{position:absolute;bottom:0.5rem;right:0.5rem;background:rgba(0,0,0,.75);padding:0.125rem 0.5rem;border-radius:0.25rem;font-size:0.6875rem;font-weight:600}
.plat-badge{position:absolute;top:0.5rem;left:0.5rem;background:rgba(0,0,0,.6);padding:0.1875rem 0.5rem;border-radius:0.25rem;font-size:0.6875rem;font-weight:600;backdrop-filter:blur(4px)}
.video-info{padding:1.125rem}
.video-title{font-size:0.9375rem;font-weight:500;margin-bottom:0.625rem;line-height:1.6;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;letter-spacing:-.005em}
.video-meta{display:flex;flex-wrap:wrap;gap:0.75rem;margin-bottom:0.875rem}
.meta{display:flex;align-items:center;gap:0.3125rem;font-size:0.75rem;color:var(--text2);letter-spacing:.005em}.meta i{font-size:0.6875rem;color:var(--text3)}
.dl-buttons{display:flex;gap:0.5rem;margin-bottom:0.625rem}
.dl-btn{flex:1;display:flex;align-items:center;gap:0.5rem;padding:0.6875rem 0.875rem;border:none;border-radius:var(--rs);cursor:pointer;transition:var(--tr);color:#fff}
.dl-btn:hover{transform:translateY(-2px)}.dl-btn:disabled{opacity:.5;cursor:not-allowed;transform:none}
.dl-btn.video{background:linear-gradient(135deg,#f43f5e,#e11d48)}.dl-btn.video:hover{box-shadow:0 6px 18px rgba(244,63,94,.35)}
.dl-btn.audio{background:linear-gradient(135deg,#8b5cf6,#7c3aed)}.dl-btn.audio:hover{box-shadow:0 6px 18px rgba(139,92,246,.35)}
.dl-btn i{font-size:1rem}.btn-t{text-align:left}.bl{display:block;font-size:0.875rem;font-weight:500;letter-spacing:.02em}.bs{display:block;font-size:0.625rem;opacity:.75;font-family:'Inter','Battambang',sans-serif;letter-spacing:.01em;margin-top:1px}
.comments-btn{width:100%;justify-content:center;margin-top:0.25rem}

/* ===== Comments ===== */
.comments-section{margin-bottom:1rem}
.comments-card{background:var(--bg-card);border-radius:var(--r);border:1px solid var(--border);overflow:hidden}
.comments-header{display:flex;align-items:center;justify-content:space-between;padding:0.875rem 1.125rem;border-bottom:1px solid var(--border)}
.comments-header h4{font-size:0.875rem;display:flex;align-items:center;gap:0.375rem}
.comments-list{max-height:400px;overflow-y:auto;padding:0.5rem 1.125rem}
.comment-item{display:flex;gap:0.625rem;padding:0.625rem 0;border-bottom:1px solid var(--border)}
.comment-item:last-child{border:none}
.comment-avatar{width:2rem;height:2rem;border-radius:50%;background:var(--bg-card2);flex-shrink:0;object-fit:cover}
.comment-body{flex:1;min-width:0}
.comment-author{font-size:0.75rem;font-weight:600;color:var(--accent);margin-bottom:0.125rem}
.comment-text{font-size:0.75rem;color:var(--text2);line-height:1.5}
.comment-likes{font-size:0.6875rem;color:var(--text3);margin-top:0.1875rem}.comment-likes i{margin-right:0.1875rem}

/* ===== Progress ===== */
.progress-card{background:var(--bg-card);border-radius:var(--r);padding:1.125rem;border:1px solid var(--border);box-shadow:var(--shadow)}
.progress-header{display:flex;align-items:center;gap:0.75rem;margin-bottom:0.75rem}
.prog-icon{width:2.5rem;height:2.5rem;border-radius:var(--rx);display:flex;align-items:center;justify-content:center;font-size:1rem}
.prog-icon.dl{background:rgba(139,92,246,.12);color:var(--primary);animation:pulse 1.5s ease-in-out infinite}
@keyframes pulse{0%,100%{opacity:1}50%{opacity:.6}}
.prog-info{flex:1}.prog-info h4{font-size:0.875rem;font-weight:500;letter-spacing:.02em}.prog-sub{font-size:0.6875rem;color:var(--text2);margin-top:0.125rem;letter-spacing:.005em}
.prog-pct{font-size:1.25rem;font-weight:600;color:var(--primary);letter-spacing:.01em}
.prog-bar-wrap{height:0.375rem;background:var(--bg-input);border-radius:9999px;overflow:hidden}
.prog-bar{height:100%;border-radius:9999px;background:linear-gradient(90deg,var(--primary),var(--accent));transition:width .3s ease}
.batch-stats{display:flex;gap:0.875rem;margin-top:0.625rem;justify-content:center}
.bstat{display:flex;align-items:center;gap:0.25rem;font-size:0.75rem;font-weight:600}
.bstat.ok{color:var(--success)}.bstat.fail{color:var(--error)}.bstat.tot{color:var(--text2)}

/* ===== Profile Card ===== */
.profile-result{margin-bottom:1rem}
.profile-card{background:var(--bg-card);border-radius:var(--r);padding:1.25rem;border:1px solid var(--border);box-shadow:var(--shadow);margin-bottom:0.75rem}
.profile-top{display:flex;align-items:center;gap:0.875rem;margin-bottom:1rem}
.profile-avatar{width:4rem;height:4rem;border-radius:50%;object-fit:cover;border:3px solid var(--primary);flex-shrink:0;background:var(--bg-card2)}
.profile-details{flex:1;min-width:0}
.profile-details h3{font-size:1.0625rem;font-weight:500;letter-spacing:.02em}
.profile-uname{font-size:0.75rem;color:var(--text2);margin-top:0.125rem;font-family:'Inter','Battambang',sans-serif}
.profile-sig{font-size:0.75rem;color:var(--text3);margin-top:0.25rem;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;line-height:1.7;letter-spacing:.005em}
.profile-stats{display:grid;grid-template-columns:repeat(4,1fr);gap:0.375rem}
.pstat{text-align:center;padding:0.5rem 0.25rem;background:var(--bg-input);border-radius:var(--rx)}
.pstat-val{display:block;font-size:1rem;font-weight:600;letter-spacing:.01em}
.pstat-lbl{display:block;font-size:0.625rem;color:var(--text3);margin-top:0.125rem;font-family:'Battambang','Khmer',sans-serif;letter-spacing:.01em}

/* ===== Analytics ===== */
.analytics-toggle{text-align:center;margin-bottom:0.75rem}
.analytics-panel{margin-bottom:0.75rem}
.analytics-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:0.5rem}
.acard{background:var(--bg-card);border-radius:var(--rs);padding:0.875rem;border:1px solid var(--border);display:flex;align-items:center;gap:0.625rem}
.acard-icon{width:2.25rem;height:2.25rem;border-radius:var(--rx);background:rgba(139,92,246,.1);color:var(--primary);display:flex;align-items:center;justify-content:center;font-size:0.875rem;flex-shrink:0}
.acard-val{display:block;font-size:0.9375rem;font-weight:800}
.acard-lbl{display:block;font-size:0.625rem;color:var(--text3)}

/* ===== Toolbar ===== */
.toolbar{display:flex;align-items:center;justify-content:space-between;background:var(--bg-card);border-radius:var(--rs);padding:0.625rem 0.875rem;border:1px solid var(--border);margin-bottom:0.75rem;flex-wrap:wrap;gap:0.5rem}
.toolbar-left{display:flex;align-items:center;gap:0.625rem;flex-wrap:wrap}
.toolbar-right{display:flex;gap:0.375rem;flex-wrap:wrap}
.count-label{font-size:0.875rem;font-weight:500;color:var(--text2);letter-spacing:.01em}
.sort-group,.filter-group{display:flex;align-items:center;gap:0.25rem;font-size:0.6875rem;color:var(--text3)}
.filter-input{width:60px;background:var(--bg-input);border:1px solid var(--border);color:var(--text);padding:0.25rem 0.375rem;border-radius:var(--rx);font-size:0.6875rem}
.filter-group span{color:var(--text3)}

/* ===== Video Grid ===== */
.video-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(200px,1fr));gap:0.625rem}
.vg-item{background:var(--bg-card);border-radius:var(--rs);overflow:hidden;border:2px solid var(--border);transition:var(--tr);cursor:pointer;position:relative}
.vg-item:hover{border-color:var(--border-h);transform:translateY(-2px);box-shadow:var(--shadow)}
.vg-item.selected{border-color:var(--primary)}
.vg-item .item-check{position:absolute;top:0.375rem;left:0.375rem;width:1.625rem;height:1.625rem;border-radius:50%;background:rgba(0,0,0,.6);border:2px solid rgba(255,255,255,.35);display:flex;align-items:center;justify-content:center;z-index:2;transition:var(--tr);backdrop-filter:blur(4px)}
.vg-item.selected .item-check{background:var(--primary);border-color:var(--primary)}
.vg-item .item-check i{font-size:0.6875rem;color:#fff;opacity:0}.vg-item.selected .item-check i{opacity:1}
.vg-item .item-plat{position:absolute;top:0.375rem;right:0.375rem;font-size:0.75rem;background:rgba(0,0,0,.6);padding:0.125rem 0.375rem;border-radius:0.25rem;backdrop-filter:blur(4px)}
.vg-item .item-type{position:absolute;top:0.375rem;left:2.125rem;font-size:0.625rem;color:#fff;padding:0.125rem 0.4375rem;border-radius:0.25rem;font-weight:600;display:flex;align-items:center;gap:0.1875rem;backdrop-filter:blur(4px)}

/* Search Type Selector */
.search-type-selector{display:flex;gap:0.375rem;margin:0.5rem 0 0.25rem}
.search-type-btn{background:var(--bg-input);border:1.5px solid var(--border);border-radius:var(--rx);padding:0.375rem 0.875rem;font-size:0.75rem;color:var(--text2);cursor:pointer;transition:var(--tr);display:flex;align-items:center;gap:0.3125rem;font-weight:500}
.search-type-btn:hover{border-color:var(--primary);color:var(--text)}
.search-type-btn.active{background:var(--primary);border-color:var(--primary);color:#fff}
.search-type-btn i{font-size:0.6875rem}

/* Search Options */
.search-options{display:flex;gap:0.625rem;align-items:center;margin:0.25rem 0 0.5rem}
.search-options .opt{display:flex;align-items:center;gap:0.375rem;font-size:0.75rem;color:var(--text2)}

.vg-item .item-thumb{width:100%;aspect-ratio:9/16;object-fit:cover;display:block;background:#0f172a}
.vg-item .item-body{padding:0.5rem 0.625rem}
.vg-item .item-title{font-size:0.6875rem;font-weight:500;line-height:1.6;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;color:var(--text);margin-bottom:0.3125rem;letter-spacing:-.005em}
.vg-item .item-stats{display:flex;gap:0.5rem;font-size:0.625rem;color:var(--text3);flex-wrap:wrap}
.vg-item .item-stats i{margin-right:0.125rem}
.vg-item .item-dl{width:100%;padding:0.4375rem;background:linear-gradient(135deg,var(--primary),var(--primary-d));border:none;color:#fff;font-size:0.6875rem;font-weight:500;cursor:pointer;transition:var(--tr);display:flex;align-items:center;justify-content:center;gap:0.25rem;letter-spacing:.02em;font-family:'Koulen','Battambang',sans-serif}
.vg-item .item-dl:hover{opacity:.9}.vg-item .item-dl:disabled{opacity:.5;cursor:not-allowed}
.vg-item .item-dl.done{background:linear-gradient(135deg,var(--success),#16a34a)}
.vg-item .item-translate{position:absolute;bottom:2.5rem;right:0.375rem;background:rgba(0,0,0,.65);border:none;color:var(--text2);font-size:0.6875rem;padding:0.1875rem 0.4375rem;border-radius:0.25rem;cursor:pointer;backdrop-filter:blur(4px);transition:var(--tr)}
.vg-item .item-translate:hover{color:#fff;background:rgba(139,92,246,.7)}

/* ===== Features ===== */
.features-section{margin-top:2.25rem}
.section-title{text-align:center;font-size:1.125rem;font-weight:500;margin-bottom:1rem;letter-spacing:.03em}
.feature-tabs{display:flex;gap:0.25rem;justify-content:center;margin-bottom:0.875rem}
.feat-tab{padding:0.4375rem 1.125rem;border:1px solid var(--border);border-radius:9999px;background:transparent;color:var(--text2);font-size:0.75rem;font-weight:600;cursor:pointer;transition:var(--tr)}
.feat-tab:hover{color:var(--text);border-color:var(--border-h)}
.feat-tab.active{background:var(--primary);border-color:var(--primary);color:#fff}
.feat-content{display:none}.feat-content.active{display:grid}
.features-grid{grid-template-columns:repeat(4,1fr);gap:0.5rem}
.fcard{background:var(--bg-card);border-radius:var(--rs);padding:1rem 0.625rem;text-align:center;border:1px solid var(--border);transition:var(--tr)}
.fcard:hover{border-color:var(--border-h);transform:translateY(-2px);box-shadow:var(--shadow)}
.fcard.pro{border-color:rgba(244,63,94,.15)}.fcard.pro:hover{border-color:rgba(244,63,94,.4)}
.fcard.adv{border-color:rgba(34,211,238,.12)}.fcard.adv:hover{border-color:rgba(34,211,238,.35)}
.ficon{width:2.375rem;height:2.375rem;margin:0 auto 0.5rem;background:rgba(139,92,246,.08);border-radius:var(--rx);display:flex;align-items:center;justify-content:center;font-size:1rem;color:var(--primary)}
.fcard.pro .ficon{background:rgba(244,63,94,.08);color:#f43f5e}
.fcard.adv .ficon{background:rgba(34,211,238,.08);color:var(--accent)}
.fcard h4{font-size:0.75rem;font-weight:500;margin-bottom:0.25rem;letter-spacing:.02em}.fcard p{font-size:0.625rem;color:var(--text3);line-height:1.6;letter-spacing:.005em}

/* ===== Footer ===== */
.footer{text-align:center;margin-top:2.25rem;padding-top:1.25rem;border-top:1px solid var(--border)}
.footer p{font-size:0.6875rem;color:var(--text3);line-height:1.9;letter-spacing:.01em}

/* Donate Button */
.donate-section{margin-bottom:1rem}
.donate-btn{display:inline-flex;align-items:center;gap:0.5rem;padding:0.75rem 2rem;background:linear-gradient(135deg,#f43f5e,#e11d48);border:none;border-radius:9999px;color:#fff;font-size:0.9375rem;font-weight:500;font-family:'Koulen','Battambang',sans-serif;letter-spacing:.04em;cursor:pointer;transition:all .2s cubic-bezier(.4,0,.2,1);box-shadow:0 4px 14px rgba(244,63,94,.25);position:relative;overflow:hidden}
.donate-btn::before{content:'';position:absolute;inset:0;background:linear-gradient(135deg,rgba(255,255,255,.15),transparent);opacity:0;transition:opacity .2s}
.donate-btn:hover{transform:translateY(-2px);box-shadow:0 8px 25px rgba(244,63,94,.4)}
.donate-btn:hover::before{opacity:1}
.donate-btn:active{transform:translateY(-1px)}
.donate-btn i{font-size:1rem;animation:heartbeat 1.5s ease-in-out infinite}
@keyframes heartbeat{0%,100%{transform:scale(1)}14%{transform:scale(1.2)}28%{transform:scale(1)}42%{transform:scale(1.15)}70%{transform:scale(1)}}
.donate-hint{font-size:0.6875rem;color:var(--text3);margin-top:0.5rem;opacity:.7}

/* Donate Modal */
.donate-modal{position:fixed;inset:0;z-index:9999;display:flex;align-items:center;justify-content:center;padding:1rem}
.donate-modal-overlay{position:absolute;inset:0;background:rgba(2,6,23,.8);backdrop-filter:blur(12px)}
.donate-modal-content{position:relative;width:100%;max-width:26.25rem;background:linear-gradient(180deg,var(--bg-card2) 0%,var(--bg-card) 100%);border-radius:1.25rem;border:1px solid rgba(244,63,94,.15);box-shadow:var(--shadow-xl);animation:modalIn .25s ease}
@keyframes modalIn{from{opacity:0;transform:scale(.94) translateY(16px)}to{opacity:1;transform:none}}
.donate-modal-close{position:absolute;top:0.75rem;right:0.875rem;background:rgba(255,255,255,.06);border:none;color:var(--text2);width:2rem;height:2rem;border-radius:50%;cursor:pointer;font-size:0.875rem;transition:var(--tr);display:flex;align-items:center;justify-content:center;z-index:2}
.donate-modal-close:hover{background:rgba(239,68,68,.2);color:#fff}
.donate-header{text-align:center;padding:1.75rem 1.5rem 1rem}
.donate-icon-wrap{width:3.5rem;height:3.5rem;margin:0 auto 0.75rem;background:linear-gradient(135deg,#f43f5e,#e11d48);border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:1.5rem;color:#fff;box-shadow:0 4px 18px rgba(244,63,94,.35);animation:heartbeat 1.5s ease-in-out infinite}
.donate-header h3{font-size:1.25rem;font-family:'Koulen','Battambang',sans-serif;letter-spacing:.03em;margin-bottom:0.25rem}
.donate-header p{font-size:0.75rem;color:var(--text2);line-height:1.7;letter-spacing:.005em}
.donate-body{padding:0 1.5rem 1.5rem}
.donate-amounts{display:grid;grid-template-columns:repeat(4,1fr);gap:0.5rem;margin-bottom:1rem}
.donate-amount{padding:0.625rem;background:rgba(255,255,255,.04);border:2px solid var(--border);border-radius:var(--rx);color:var(--text);font-size:0.9375rem;font-weight:700;font-family:'Inter',sans-serif;cursor:pointer;transition:var(--tr)}
.donate-amount:hover{border-color:rgba(244,63,94,.4);background:rgba(244,63,94,.06)}
.donate-amount.active{background:rgba(244,63,94,.1);border-color:#f43f5e;color:#f43f5e}
.donate-custom{margin-bottom:0.875rem}
.donate-custom label,.donate-field label{display:block;font-size:0.75rem;color:var(--text2);margin-bottom:0.3125rem;letter-spacing:.01em}
.donate-input-wrap{display:flex;align-items:center;background:var(--bg-input);border:2px solid var(--border);border-radius:var(--rx);padding:0 0.75rem;transition:border-color .2s}
.donate-input-wrap:focus-within{border-color:#f43f5e}
.donate-currency{color:#f43f5e;font-size:1rem;font-weight:700;margin-right:0.375rem}
.donate-input-wrap input{flex:1;background:none;border:none;outline:none;color:var(--text);font-size:0.9375rem;padding:0.625rem 0;font-family:'Inter',sans-serif}
.donate-field{margin-bottom:0.75rem}
.donate-field input{width:100%;background:var(--bg-input);border:2px solid var(--border);border-radius:var(--rx);padding:0.625rem 0.875rem;color:var(--text);font-size:0.8125rem;outline:none;transition:border-color .2s}
.donate-field input:focus{border-color:#f43f5e}
.donate-field input::placeholder{color:var(--text3)}
.donate-submit{width:100%;padding:0.875rem;background:linear-gradient(135deg,#f43f5e,#e11d48);border:none;border-radius:var(--rs);color:#fff;font-size:1rem;font-family:'Koulen','Battambang',sans-serif;letter-spacing:.04em;cursor:pointer;transition:var(--tr);margin-top:0.375rem;box-shadow:0 4px 14px rgba(244,63,94,.25);display:flex;align-items:center;justify-content:center;gap:0.5rem}
.donate-submit:hover{transform:translateY(-2px);box-shadow:0 8px 20px rgba(244,63,94,.35)}
.donate-submit:disabled{opacity:.6;cursor:not-allowed;transform:none}
.donate-methods{text-align:center;margin-top:0.875rem;font-size:0.6875rem;color:var(--text3)}
.donate-methods i{margin-right:0.25rem;color:#22c55e}

/* KHQR Card */
.khqr-card{background:#fff;border-radius:var(--rs);overflow:hidden;max-width:16.25rem;margin:0 auto;box-shadow:var(--shadow-lg)}
.khqr-header{background:linear-gradient(135deg,#ef4444,#dc2626);color:#fff;padding:0.5rem 0.75rem;text-align:center;font-weight:700;font-size:0.875rem;letter-spacing:1px;font-family:'Inter',sans-serif}
.khqr-info{display:flex;justify-content:space-between;align-items:center;padding:0.375rem 0.75rem;background:#f8fafc;border-bottom:1px solid #e2e8f0}
.khqr-name{font-size:0.75rem;font-weight:700;color:#1e293b;font-family:'Inter',sans-serif}
.khqr-amount{font-size:0.875rem;font-weight:700;color:#3b82f6;font-family:'Inter',sans-serif}
.khqr-divider{height:2px;background:linear-gradient(to right,#e2e8f0,#ef4444,#e2e8f0);margin:0}
.khqr-qr-wrap{padding:1rem;display:flex;justify-content:center;align-items:center;background:#fff}
.khqr-qr-wrap img{width:10rem;height:10rem;object-fit:contain;border:none}
.khqr-scan-instruction{font-size:0.75rem;color:#16a34a;margin:0;font-weight:700;text-align:center;background:#f0fdf4;padding:0.5rem 0.75rem;border-top:1px solid #22c55e}
.khqr-countdown{font-size:0.75rem;font-weight:700;color:#3b82f6;text-align:center;background:#eff6ff;padding:0.375rem 0.75rem;border-top:1px solid #93c5fd;font-family:'Inter',sans-serif}
.khqr-countdown.expired{color:#ef4444;background:#fef2f2;border-color:#fca5a5}
.khqr-status{font-size:0.75rem;font-weight:700;color:#3b82f6;text-align:center;padding:0.5rem 0.75rem;background:#eff6ff;border-top:1px solid #bfdbfe;font-family:'Battambang','Inter',sans-serif;letter-spacing:.01em}
.khqr-status.status-paid{color:#22c55e;background:#f0fdf4;border-color:#86efac}
.khqr-status.status-expired{color:#ef4444;background:#fef2f2;border-color:#fca5a5}
.khqr-new-btn{background:linear-gradient(135deg,#22c55e,#14b8a6)!important}

/* ===== Cookie Helper ===== */
.cookie-helper{margin-top:0.75rem}
.cookie-banner{display:flex;align-items:center;gap:0.75rem;padding:0.75rem 1rem;background:linear-gradient(135deg,rgba(59,130,246,.08),rgba(139,92,246,.06));border:1px solid rgba(59,130,246,.2);border-radius:var(--rx);flex-wrap:wrap}
.cookie-banner>i{font-size:1.375rem;color:var(--warn);flex-shrink:0}
.cookie-info{flex:1;min-width:11.25rem}
.cookie-info strong{font-size:0.8125rem;color:var(--text);display:block}
.cookie-info p{font-size:0.6875rem;color:var(--text2);margin:0.125rem 0 0}
.cookie-upload-btn{display:inline-flex;align-items:center;gap:0.375rem;padding:0.375rem 0.875rem;background:rgba(59,130,246,.15);color:#60a5fa;border:1px solid rgba(59,130,246,.25);border-radius:0.375rem;font-size:0.75rem;cursor:pointer;transition:var(--tr)}
.cookie-upload-btn:hover{background:rgba(59,130,246,.25);color:#fff}
.cookie-status{font-size:0.6875rem;color:var(--success)}
.cookie-status.error{color:var(--error)}

/* ===== Watermark Remover ===== */
.wm-card{text-align:center}
.wm-header{margin-bottom:1.25rem}
.wm-icon-wrap{width:3.5rem;height:3.5rem;margin:0 auto 0.75rem;background:linear-gradient(135deg,var(--primary),var(--primary-d));border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:1.5rem;color:#fff;box-shadow:0 4px 18px rgba(139,92,246,.35)}
.wm-header h3{font-size:1.25rem;font-family:'Koulen','Battambang',sans-serif;letter-spacing:.03em;margin-bottom:0.25rem}
.wm-header p{font-size:0.75rem;color:var(--text2);line-height:1.7}
.wm-method{margin-bottom:1rem}
.wm-method-label{font-size:0.75rem;font-weight:600;color:var(--text2);margin-bottom:0.5rem;text-align:left;display:flex;align-items:center;gap:0.375rem}
.wm-method-label i{color:var(--primary)}
.wm-upload-area{display:flex;flex-direction:column;align-items:center;justify-content:center;gap:0.5rem;padding:1.5rem;border:2px dashed var(--border);border-radius:var(--rs);cursor:pointer;transition:var(--tr);color:var(--text2);min-height:5rem}
.wm-upload-area:hover,.wm-upload-area.dragover{border-color:var(--primary);background:rgba(139,92,246,.04)}
.wm-upload-area.has-file{border-color:#22c55e;background:rgba(34,197,94,.04)}
.wm-upload-area.has-file i{color:#22c55e}
.wm-upload-area i{font-size:1.75rem;color:var(--text3)}
.wm-upload-area span{font-size:0.75rem}
.wm-options{display:flex;flex-direction:column;gap:0.75rem;margin-bottom:1rem;text-align:left}
.wm-option-group label{display:block;font-size:0.75rem;color:var(--text2);margin-bottom:0.375rem;letter-spacing:.01em}
.wm-option-group select{width:100%;padding:0.5rem 0.75rem;background:var(--bg-input);border:2px solid var(--border);border-radius:var(--rx);color:var(--text);font-size:0.8125rem;outline:none;transition:border-color .2s}
.wm-option-group select:focus{border-color:var(--primary)}
.wm-positions{display:flex;flex-wrap:wrap;gap:0.375rem}
.wm-pos-btn{padding:0.375rem 0.75rem;background:rgba(255,255,255,.04);border:2px solid var(--border);border-radius:var(--rx);color:var(--text2);font-size:0.75rem;cursor:pointer;transition:var(--tr);display:flex;align-items:center;gap:0.25rem}
.wm-pos-btn:hover{border-color:rgba(139,92,246,.4);background:rgba(139,92,246,.06)}
.wm-pos-btn.active{background:rgba(139,92,246,.1);border-color:var(--primary);color:var(--primary-h)}
.wm-pos-btn i{font-size:0.625rem}
.wm-remove-btn{background:linear-gradient(135deg,var(--primary),var(--primary-d))!important}
.wm-remove-btn:hover{box-shadow:0 8px 20px rgba(139,92,246,.35)!important}
.wm-progress-bar{width:100%;height:0.5rem;background:rgba(255,255,255,.06);border-radius:9999px;margin-top:1rem;overflow:hidden}
.wm-progress-fill{height:100%;background:linear-gradient(90deg,var(--primary),var(--primary-d));border-radius:9999px;transition:width .3s;width:0%}
.wm-progress-label{font-size:0.75rem;color:var(--text2);margin-top:0.375rem;font-family:'Inter',sans-serif}
.wm-compare{display:grid;grid-template-columns:1fr 1fr;gap:0.75rem;margin:1rem 0;text-align:center}
.wm-compare-item span{display:block;font-size:0.6875rem;color:var(--text2);margin-bottom:0.375rem;font-weight:600;text-transform:uppercase;letter-spacing:.04em}
.state-card.success .state-icon i{color:#22c55e}
@media(max-width:640px){.wm-compare{grid-template-columns:1fr}}



/* ===== Responsive ===== */
@media(max-width:640px){
    .container{padding:0.875rem 0.5rem 1.75rem}
    .logo-text h1{font-size:1rem}
    .tab-btn span{font-size:0.6875rem}
    .features-grid{grid-template-columns:repeat(2,1fr)}
    .profile-stats{grid-template-columns:repeat(2,1fr)}
    .analytics-grid{grid-template-columns:repeat(2,1fr)}
    .video-grid{grid-template-columns:repeat(auto-fill,minmax(9.375rem,1fr))}
    .dl-buttons{flex-direction:column}
    .toolbar{flex-direction:column;align-items:stretch}
    .toolbar-left,.toolbar-right{justify-content:center}
    .filter-group{flex-wrap:wrap;justify-content:center}
    .cookie-banner{flex-direction:column;text-align:center}
}

/* Load More Button */
.load-more-wrap{text-align:center;padding:1.5rem 0}
.load-more-btn{display:inline-flex;align-items:center;gap:0.5rem;padding:0.75rem 2rem;font-size:1rem;border-radius:var(--rs);background:rgba(139,92,246,.1);color:#a78bfa;border:1px solid rgba(139,92,246,.2);cursor:pointer;transition:var(--tr);font-family:'Koulen','Battambang',sans-serif;letter-spacing:.03em}
.load-more-btn:hover{background:rgba(139,92,246,.2);transform:translateY(-2px);box-shadow:0 4px 14px rgba(139,92,246,.15)}
.load-more-btn i{transition:transform .2s}
.load-more-btn:hover i{transform:translateY(3px)}

/* FFmpeg Options */
.ffmpeg-options{margin-top:0.75rem;padding:0.75rem 1rem;background:rgba(139,92,246,.06);border:1px solid rgba(139,92,246,.15);border-radius:var(--rs)}
.option-row{display:flex;gap:1rem;flex-wrap:wrap}
.option-group{flex:1;min-width:8.75rem}
.option-group label{display:block;font-size:0.8rem;color:#a78bfa;margin-bottom:0.35rem;font-weight:500;letter-spacing:.02em}
.option-group label i{margin-right:0.3rem}
.option-group select{width:100%;padding:0.45rem 0.65rem;background:rgba(15,23,42,.6);border:1px solid rgba(139,92,246,.2);border-radius:var(--rx);color:#e2e8f0;font-size:0.85rem;outline:none;cursor:pointer;transition:border-color .2s}
.option-group select:focus{border-color:#8b5cf6;box-shadow:0 0 0 2px rgba(139,92,246,.12)}
.option-group select option{background:#0f172a;color:#e2e8f0}
.option-group select optgroup{color:#a78bfa;font-weight:600}
.ffmpeg-status{margin-top:0.5rem;font-size:0.75rem;color:#64748b;display:flex;align-items:center;gap:0.35rem}
.ffmpeg-status .online{color:#22c55e}
.ffmpeg-status .offline{color:#ef4444}

/* ==================== Sora2 Bulk Download (soravdl-inspired) ==================== */
.sora2-card{background:linear-gradient(135deg,rgba(162,89,255,.08) 0%,rgba(15,15,30,.95) 40%);border:1px solid rgba(162,89,255,.25);position:relative;overflow:hidden}

/* Hero Section */
.sora2-hero{text-align:center;padding:1.5rem 0 1rem;position:relative;z-index:1}
.sora2-hero-glow{position:absolute;top:-50%;left:50%;transform:translateX(-50%);width:300px;height:300px;background:radial-gradient(50% 50%,rgba(217,70,239,.1) 0%,transparent 50%);pointer-events:none;z-index:0}
.sora2-icon-wrap{width:3.5rem;height:3.5rem;border-radius:var(--rs);background:linear-gradient(135deg,#d946ef,#a855f7);display:flex;align-items:center;justify-content:center;margin:0 auto 0.75rem;font-size:1.5rem;color:#fff;box-shadow:0 6px 20px rgba(217,70,239,.3);animation:sora2-glow 3s ease-in-out infinite alternate}
@keyframes sora2-glow{0%{box-shadow:0 6px 20px rgba(217,70,239,.3)}100%{box-shadow:0 8px 30px rgba(217,70,239,.5)}}
.sora2-hero-title{font-family:'Koulen',sans-serif;font-size:1.375rem;color:#fff;margin:0 0 0.375rem;letter-spacing:.03em;line-height:1.3}
.sora2-hero-subtitle{color:#94a3b8;font-size:0.8125rem;margin:0;line-height:1.625;max-width:90%;margin-left:auto;margin-right:auto}

/* Feature Badges */
.sora2-features{display:flex;flex-wrap:wrap;justify-content:center;gap:0.375rem;margin:0 0 1rem;padding:0 0.5rem}
.sora2-feature-badge{display:inline-flex;align-items:center;gap:0.3125rem;padding:0.3125rem 0.625rem;background:rgba(217,70,239,.06);border:1px solid rgba(217,70,239,.15);border-radius:9999px;font-size:0.75rem;color:#e9d5ff;font-weight:500;transition:var(--tr)}
.sora2-feature-badge:hover{background:rgba(217,70,239,.12);border-color:rgba(217,70,239,.3);transform:translateY(-1px)}
.sora2-feature-badge:first-child{background:rgba(34,197,94,.08);border-color:rgba(34,197,94,.2);color:#86efac}
.sora2-feature-badge:first-child i{color:#22c55e}
.sora2-feature-badge i{color:#d946ef;font-size:0.6875rem}

/* URL Input */
.sora2-url-section{margin:0.75rem 0}
.sora2-url-label{display:flex;align-items:center;justify-content:space-between;margin-bottom:0.375rem}
.sora2-url-label-left{display:flex;align-items:center;gap:0.375rem}
.sora2-url-icon{font-size:1.0625rem;color:#a855f7;background:rgba(168,85,247,.1);width:1.75rem;height:1.75rem;display:flex;align-items:center;justify-content:center;border-radius:0.4375rem}
.sora2-url-title{font-size:1rem;color:#e2e8f0;font-weight:700;font-family:'Koulen',sans-serif;letter-spacing:.03em}
.sora2-url-count{font-size:0.75rem;color:#a855f7;font-weight:600;background:rgba(168,85,247,.1);padding:0.125rem 0.5rem;border-radius:var(--rx)}
.sora2-textarea{width:100%;min-height:6.875rem;background:rgba(15,23,42,.5);border:1px solid rgba(168,85,247,.15);border-radius:var(--rs);padding:0.625rem 0.875rem;color:#e2e8f0;font-size:0.8125rem;resize:vertical;font-family:'Battambang','Inter',sans-serif;line-height:1.625;transition:var(--tr)}
.sora2-textarea:focus{border-color:#a855f7;outline:none;box-shadow:0 0 0 3px rgba(168,85,247,.12)}
.sora2-textarea::placeholder{color:#475569}
.sora2-actions{display:flex;gap:0.5rem;margin-top:0.5rem}
.sora2-actions button{flex:1;padding:0.4375rem;border-radius:var(--rx);font-size:0.8125rem;font-family:'Battambang','Inter',sans-serif;cursor:pointer;transition:var(--tr);border:1px solid rgba(168,85,247,.12);background:rgba(168,85,247,.06);color:#c4b5fd}
.sora2-actions button:hover{background:rgba(168,85,247,.15);border-color:rgba(168,85,247,.25)}

/* Download Button */
.sora2-download-btn{width:100%;margin-top:0.75rem;background:linear-gradient(135deg,#d946ef,#a855f7)!important;border:none!important;font-size:1rem;padding:0.75rem;border-radius:var(--rs);box-shadow:0 4px 14px rgba(217,70,239,.25);color:#fff!important;font-weight:600;font-family:'Battambang','Inter',sans-serif;cursor:pointer;transition:var(--tr);display:flex;align-items:center;justify-content:center;gap:0.5rem}
.sora2-download-btn:hover:not(:disabled){transform:translateY(-2px);box-shadow:0 8px 20px rgba(217,70,239,.4);background:linear-gradient(135deg,#e879f9,#c084fc)!important}
.sora2-download-btn:disabled{opacity:.5;cursor:not-allowed;transform:none!important}

/* Quick Stats */
.sora2-quick-stats{display:flex;align-items:center;justify-content:center;gap:1.125rem;margin-top:0.75rem;flex-wrap:wrap}
.sora2-stat-item{display:flex;align-items:center;gap:0.3125rem;font-size:0.75rem;color:#64748b}
.sora2-stat-item i{font-size:0.6875rem}

/* Compliance Note */
.sora2-compliance{display:flex;align-items:center;justify-content:center;gap:0.375rem;margin-top:0.5rem;font-size:0.6875rem;color:#475569;text-align:center}
.sora2-compliance i{color:#475569;font-size:0.625rem;flex-shrink:0}

/* Processing */
.sora2-process-card{text-align:center}
.sora2-process-card h3{font-family:'Koulen',sans-serif;color:#c4b5fd;margin:0 0 0.25rem}
.sora2-progress-bar{width:100%;height:0.375rem;background:rgba(168,85,247,.12);border-radius:9999px;overflow:hidden;margin:0.75rem 0 0.375rem}
.sora2-progress-fill{height:100%;background:linear-gradient(90deg,#d946ef,#a855f7);border-radius:9999px;transition:width .4s;width:0}
.sora2-progress-label{color:#c4b5fd;font-size:0.8125rem;font-weight:600;margin:0}
.sora2-current-url{font-size:0.75rem;color:#64748b;margin-top:0.25rem;word-break:break-all}

/* Results - Video Ready */
.sora2-results-ready{text-align:center;margin-bottom:1rem}
.sora2-ready-icon{width:3.5rem;height:3.5rem;background:linear-gradient(135deg,#d946ef,#a855f7);border-radius:var(--rs);display:flex;align-items:center;justify-content:center;margin:0 auto 0.5rem;box-shadow:0 6px 20px rgba(217,70,239,.3)}
.sora2-ready-icon i{color:#fff;font-size:1.375rem}
.sora2-results-ready h3{font-family:'Koulen',sans-serif;font-size:1.25rem;color:#fff;margin:0 0 0.125rem}
.sora2-results-ready p{color:#94a3b8;font-size:0.8125rem;margin:0}

/* No Watermark Badge */
.sora2-nw-badge{display:inline-flex;align-items:center;gap:0.3125rem;padding:0.375rem 0.75rem;background:rgba(34,197,94,.1);border:1px solid rgba(34,197,94,.2);border-radius:var(--rs);margin-bottom:0.5rem}
.sora2-nw-badge i{color:#22c55e;font-size:1rem}
.sora2-nw-badge span{color:#22c55e;font-weight:700;font-size:1rem}

/* Result Cards */
.sora2-results-header{text-align:center;margin-bottom:0.75rem}
.sora2-results-grid{display:flex;flex-direction:column;gap:0.5rem}
.sora2-result-card{background:rgba(15,23,42,.5);border:1px solid rgba(168,85,247,.1);border-radius:var(--rx);padding:0.625rem;display:flex;align-items:center;gap:0.5rem;transition:var(--tr)}
.sora2-result-card:hover{border-color:rgba(168,85,247,.2);transform:translateY(-1px);box-shadow:var(--shadow)}
.sora2-result-card.success{border-left:3px solid #22c55e}
.sora2-result-card.error{border-left:3px solid #ef4444}
.sora2-result-index{width:1.625rem;height:1.625rem;border-radius:9999px;background:rgba(168,85,247,.12);display:flex;align-items:center;justify-content:center;font-size:0.75rem;color:#a855f7;font-weight:700;flex-shrink:0}
.sora2-result-info{flex:1;min-width:0}
.sora2-result-url{font-size:0.75rem;color:#94a3b8;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}
.sora2-result-status{font-size:0.75rem;margin-top:0.125rem;display:flex;align-items:center;gap:0.25rem}
.sora2-result-status i.fa-check-circle,.sora2-result-status i.fa-circle-check{color:#22c55e}
.sora2-result-status i.fa-times-circle{color:#ef4444}
.sora2-result-status.error{color:#ef4444}
.sora2-result-actions{display:flex;gap:0.375rem;flex-shrink:0}
.sora2-dl-btn{display:inline-flex;align-items:center;gap:0.25rem;padding:0.3125rem 0.625rem;background:linear-gradient(135deg,#d946ef,#a855f7);color:#fff;border-radius:var(--rx);font-size:0.75rem;text-decoration:none;font-weight:600;transition:var(--tr);white-space:nowrap}
.sora2-dl-btn:hover{transform:translateY(-1px);box-shadow:0 3px 10px rgba(217,70,239,.25)}
.sora2-dl-btn.orig{background:linear-gradient(135deg,#475569,#334155)}
.sora2-results-actions{display:flex;gap:0.5rem;margin-top:0.75rem}
.sora2-results-actions button{flex:1;padding:0.5rem;border-radius:var(--rx);font-size:0.8125rem;cursor:pointer;transition:var(--tr);border:none;font-family:'Battambang','Inter',sans-serif}

/* ==================== Save Location Bar ==================== */
.save-loc-bar{display:flex;align-items:center;gap:0.5rem;padding:0.5rem 0.75rem;background:rgba(34,197,94,.05);border:1px solid rgba(34,197,94,.15);border-radius:var(--rx);margin-bottom:0.75rem;transition:var(--tr)}
.save-loc-bar:hover{border-color:rgba(34,197,94,.3);background:rgba(34,197,94,.08)}
.save-loc-icon{width:2.125rem;height:2.125rem;border-radius:var(--rx);background:linear-gradient(135deg,#22c55e,#16a34a);display:flex;align-items:center;justify-content:center;color:#fff;font-size:0.875rem;flex-shrink:0}
.save-loc-info{flex:1;min-width:0;display:flex;flex-direction:column;gap:0.0625rem}
.save-loc-label{font-size:0.6875rem;color:#94a3b8;font-weight:500;text-transform:uppercase;letter-spacing:.04em}
.save-loc-path{font-size:0.8125rem;color:#e2e8f0;font-weight:600;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;font-family:'Courier New',monospace}
.save-loc-stats{font-size:0.6875rem;color:#64748b;white-space:nowrap;display:flex;gap:0.25rem}
.save-loc-stats span{background:rgba(100,116,139,.1);padding:0.0625rem 0.375rem;border-radius:0.3125rem}
.save-loc-actions{display:flex;gap:0.25rem;flex-shrink:0}
.save-loc-btn{width:1.875rem;height:1.875rem;border-radius:0.4375rem;border:1px solid rgba(34,197,94,.15);background:rgba(34,197,94,.06);color:#22c55e;display:flex;align-items:center;justify-content:center;cursor:pointer;transition:var(--tr);font-size:0.75rem}
.save-loc-btn:hover{background:rgba(34,197,94,.15);border-color:rgba(34,197,94,.35);transform:translateY(-1px)}

/* Save Location Edit Panel */
.save-loc-edit{background:rgba(15,23,42,.85);border:1px solid rgba(34,197,94,.15);border-radius:var(--rs);padding:0.75rem;margin-bottom:0.75rem;backdrop-filter:blur(12px)}
.save-loc-edit-header{display:flex;align-items:center;gap:0.375rem;font-size:0.8125rem;color:#22c55e;font-weight:600;margin-bottom:0.5rem}
.save-loc-edit-header i{font-size:0.875rem}
.save-loc-input{width:100%;padding:0.5rem 0.625rem;background:rgba(15,23,42,.6);border:1px solid rgba(34,197,94,.15);border-radius:var(--rx);color:#e2e8f0;font-size:0.8125rem;font-family:'Courier New',monospace;transition:border-color .2s;box-sizing:border-box}
.save-loc-input:focus{border-color:#22c55e;outline:none}
.save-loc-presets{display:flex;flex-wrap:wrap;gap:0.3125rem;margin-top:0.5rem}
.save-loc-preset{padding:0.25rem 0.5rem;background:rgba(34,197,94,.06);border:1px solid rgba(34,197,94,.12);border-radius:0.4375rem;color:#94a3b8;font-size:0.6875rem;cursor:pointer;transition:var(--tr);font-family:'Battambang','Inter',sans-serif;display:flex;align-items:center;gap:0.25rem}
.save-loc-preset:hover{background:rgba(34,197,94,.12);border-color:rgba(34,197,94,.25);color:#e2e8f0}
.save-loc-preset i{color:#22c55e;font-size:0.6875rem}
.save-loc-edit-footer{display:flex;gap:0.5rem;margin-top:0.5rem;justify-content:flex-end}
.save-loc-cancel{padding:0.3125rem 0.75rem;background:transparent;border:1px solid rgba(100,116,139,.15);border-radius:0.4375rem;color:#94a3b8;font-size:0.75rem;cursor:pointer;transition:var(--tr);font-family:'Battambang','Inter',sans-serif}
.save-loc-cancel:hover{background:rgba(100,116,139,.08);color:#e2e8f0}
.save-loc-save{padding:0.3125rem 0.75rem;background:linear-gradient(135deg,#22c55e,#16a34a);border:none;border-radius:0.4375rem;color:#fff;font-size:0.75rem;cursor:pointer;transition:var(--tr);font-family:'Battambang','Inter',sans-serif;display:flex;align-items:center;gap:0.25rem;font-weight:600}
.save-loc-save:hover{transform:translateY(-1px);box-shadow:0 3px 10px rgba(34,197,94,.25)}
.save-loc-save:disabled{opacity:.6;transform:none!important}

@media(max-width:600px){
    .sora2-settings-grid{grid-template-columns:1fr}
    .sora2-result-card{flex-direction:column;text-align:center}
    .sora2-result-actions{width:100%;justify-content:center}
    .save-loc-bar{flex-wrap:wrap;gap:0.375rem}
    .save-loc-stats{width:100%;order:3}
    .save-loc-presets{flex-direction:column}
}
